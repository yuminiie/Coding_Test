import java.util.Scanner;

public class Absolute_Test {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("정수 입력 : ");
        int num = sc.nextInt();
        int a = 0;
        if(num < 0){
            a = num * (-1);
        }
        else{
            a = num;
        }

        System.out.print( num + "의 절댓값은 " + a + "입니다.");
    }
}
